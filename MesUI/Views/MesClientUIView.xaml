<UserControl
    x:Class="MesUI.Views.MesClientUIView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MesUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewModels="clr-namespace:MesUI.ViewModels"
    d:DataContext="{d:DesignInstance viewModels:MesClientUIViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <Grid>
        <TabControl x:Name="MesTab" SelectedIndex="{Binding SelectedTabIndex}">
            <TabItem
                Width="200"
                Height="24"
                FontSize="15"
                Header="请选择Mes厂商"
                Visibility="{Binding IsShowSelectCustomer}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <StackPanel>
                        <Grid Margin="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Text="选择需要使用的Mes系统:" />
                            <ComboBox
                                Name="客户名称"
                                Grid.Column="1"
                                Height="30"
                                Margin="0,0,8,0"
                                Cursor="IBeam"
                                ItemsSource="{Binding Path=CustomerName}"
                                Text="{Binding SelectCustomer, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>

                        <Button
                            Margin="5"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Command="{Binding OpenMesUI}"
                            CommandParameter="ALM"
                            Content="开启Mes配置界面" />
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem
                Width="200"
                Height="24"
                FontSize="15"
                Header="{Binding SelectCustomer, UpdateSourceTrigger=PropertyChanged}"
                Visibility="{Binding IsShowCustomer}">
                <Grid Visibility="{Binding Mes1IsShowUIVisibility}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <StackPanel>
                        <Grid x:Name="通用标准Mes">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <StackPanel>
                                <Grid x:Name="是否开启Mes" Margin="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Text="是否开启Mes：" />
                                    <CheckBox
                                        Grid.Column="1"
                                        HorizontalAlignment="Left"
                                        IsChecked="{Binding IsEnableMes, UpdateSourceTrigger=PropertyChanged}" />
                                </Grid>

                                <Grid x:Name="Mes通讯地址" Margin="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Text="Mes通讯地址：" />
                                    <TextBox
                                        Grid.Column="1"
                                        Height="30"
                                        Margin="0,0,8,0"
                                        Cursor="IBeam"
                                        Text="{Binding MesAddress, UpdateSourceTrigger=PropertyChanged}" />
                                </Grid>

                                <Grid x:Name="Mes端口号" Margin="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Text="Mes端口号：" />
                                    <TextBox
                                        Grid.Column="1"
                                        Height="30"
                                        Margin="0,0,8,0"
                                        Cursor="IBeam"
                                        Text="{Binding Mes1Port, UpdateSourceTrigger=PropertyChanged}" />
                                </Grid>


                                <Grid x:Name="Mes超时时间" Margin="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Text="Mes超时时间：" />
                                    <TextBox
                                        Grid.Column="1"
                                        Height="30"
                                        Margin="0,0,8,0"
                                        Cursor="IBeam"
                                        Text="{Binding MesTimeOut, UpdateSourceTrigger=PropertyChanged}" />
                                </Grid>

                                <Grid x:Name="设备型号" Margin="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Text="设备型号：" />
                                    <TextBox
                                        Grid.Column="1"
                                        Height="30"
                                        Margin="0,0,8,0"
                                        Cursor="IBeam"
                                        Text="{Binding EquipmentID, UpdateSourceTrigger=PropertyChanged}" />
                                </Grid>
                            </StackPanel>

                        </Grid>
                        <Grid x:Name="Mes1Mes" Visibility="{Binding Mes1IsShowUIVisibility}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>

                            <StackPanel>
                                <Grid x:Name="线别名称" Margin="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Text="线别名称：" />
                                    <TextBox
                                        Grid.Column="1"
                                        Height="30"
                                        Margin="0,0,8,0"
                                        Cursor="IBeam"
                                        Text="{Binding Mes1LineName, UpdateSourceTrigger=PropertyChanged}" />
                                </Grid>

                                <Grid x:Name="设备名称" Margin="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Text="设备名称：" />
                                    <TextBox
                                        Grid.Column="1"
                                        Height="30"
                                        Margin="0,0,8,0"
                                        Cursor="IBeam"
                                        Text="{Binding Mes1MachineName, UpdateSourceTrigger=PropertyChanged}" />
                                </Grid>

                                <Grid x:Name="站点名称" Margin="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Text="站点名称：" />
                                    <TextBox
                                        Grid.Column="1"
                                        Height="30"
                                        Margin="0,0,8,0"
                                        Cursor="IBeam"
                                        Text="{Binding Mes1StatueName, UpdateSourceTrigger=PropertyChanged}" />
                                </Grid>

                                <Grid Margin="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Text="Mes发送重试次数：" />
                                    <TextBox
                                        Grid.Column="1"
                                        Height="30"
                                        Margin="0,0,8,0"
                                        Cursor="IBeam"
                                        Text="{Binding Mes1ReNumber, UpdateSourceTrigger=PropertyChanged}" />
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</UserControl>
